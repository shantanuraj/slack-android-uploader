{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "declaration": false,
    "noImplicitAny": false,
    "removeComments": false,
    "noLib": false,
    "moduleResolution": "node",
    "preserveConstEnums": true,
    "suppressImplicitAnyIndexErrors": true,
    "outDir": "bin"
  },
  "compileOnSave": true,
  "buildOnSave": false,
  "exclude": [
    "node_modules"
  ]
}